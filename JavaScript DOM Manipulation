// QUERY SELECTOR
let headingTitle = document.querySelector('#heading-title');
headingTitle.style.borderBottom = 'solid 3px black';

// using querySelector to change input element
let input = document.querySelector('input');
input.value = 'Hello World';
console.log(input);

// using querySelector to change input[type=submit] element
let submit = document.querySelector('input[type="submit"]');
submit.value = 'Hello World';
submit.style.color = 'blue';
console.log(submit);

// using querySelector to change button element
let btn = document.querySelector('button');
btn.value = 'Hello World';
btn.textContent = 'Log In';
console.log(btn);

// :last-child
let items = document.querySelector('.item');
items.style.color = 'red';
// this will only style the first element

// this example will style ALL using querySelector
let lastItem = document.querySelector('.item:last-child');
lastItem.style.color = 'blue';

// this example will style second element using querySelector
let secondItem = document.querySelector('.item:nth-child(2)');
secondItem.style.color = 'pink';
